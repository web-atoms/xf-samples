{
    "compilerOptions": {
        "target": "es5",
        "module":"umd",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "downlevelIteration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "jsxFactory": "XNode.create",
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@web-atoms/xf-samples/src/*": [ "./src/*" ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules",
		"tests"
    ]
}